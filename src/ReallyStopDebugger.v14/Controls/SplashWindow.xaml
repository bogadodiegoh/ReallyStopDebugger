<Window x:Class="ReallyStopDebugger.Controls.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReallyStopDebugger.Controls"
        mc:Ignorable="d"
        Title="SplashWindow" Height="80" Width="250" ResizeMode="NoResize" WindowStartupLocation="Manual"
        ShowInTaskbar="False" WindowStyle="None" BorderThickness="1" BorderBrush="Gray">
    <Grid>
        <Label x:Name="label" Content="SplashWindow" HorizontalContentAlignment="Center"
               Margin="10,10,10,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="60"/>
    </Grid>
</Window>
